<%= turbo_stream_from @meeting_room, 'remarks' %>
<div class="mx-auto p-4 w-full">
  <div class="flex justify-between items-center">
    <div class="flex justify-start items-center">
      <%= link_to '', meal_plans_path(start_date: @meeting_room.meal_plan.meal_date),
                  class: 'inline-block font-bold arrow_left' %>
      <h1 class="font-bold text-2xl"><%= l @meeting_room.meal_plan.meal_date, format: :long %></h1>
    </div>
    <div data-controller="modal" class="text-right">
      <dialog data-modal-target="dialog" class="w-1/4 min-w-60 p-4 rounded-lg backdrop:bg-black/70">
        <button autofocus data-action="modal#close" class="px-1 py-1 rounded-full bg-orange-100 text-right">
          <%= image_tag('pages/cross_mark.svg', class: 'page-icon text-center') %>
        </button>
        <div class="mb-2 text-left">
          <% if @meeting_room.meal_plan.meals.present? %>
            <h3 class="font-bold">現在登録されている献立</h3>
            <% @meeting_room.meal_plan.meals_sort_by_timing.each do |meal| %>
              <%= render meal %>
            <% end %>
          <% else %>
            <h3 class="font-bold">現在登録されている献立はありません。</h3>
          <% end %>
        </div>
      </dialog>
      <button data-action="modal#open" class="text-xs py-1 px-2.5 rounded-full border-4 border-orange-100">今日の<br>献立</button>
    </div>
  </div>

  <div class="mb-4 mx-auto">
    <div class="flex justify-center">
      <%= link_to '提案する', new_meeting_room_remark_path(@meeting_room, remark_type: :proposal), data: { turbo_frame: dom_id(Remark.new) }, class: 'inline-block mx-2 my-4 px-6 remark_button' %>
      <%= link_to 'コメントする', new_meeting_room_remark_path(@meeting_room, remark_type: :comment), data: { turbo_frame: dom_id(Remark.new) }, class: 'inline-block mx-2 my-4 px-3 remark_button' %>
    </div>
    <%= turbo_frame_tag Remark.new %>
  </div>
  <div id="remarks">
    <div class="box border border-orange-950/50">
      <h2>
        <span class="flex items-center justify-around text-xl w-24"><%= image_tag('pages/meal.svg', class: 'page-icon text-center') %>候補</span>
      </h2>
        <div id="proposals" class="inner">
          <% @remarks.filter(&:proposal?).each do |remark| %>
            <%= turbo_frame_tag 'proposal' do %>
              <%= render 'remarks/proposal', remark: %>
            <% end %>
          <% end %>
        </div>
    </div>
    <div class="mt-6">
      <h2 class="flex items-center text-xl mb-2">
        <%= image_tag('pages/chat_single.svg', class: 'icon text-center') %>
        <span>コメント</span>
      </h2>
        <div id="comments" class="grid gap">
          <% @remarks.filter(&:comment?).each do |remark| %>
            <%= turbo_frame_tag 'comment' do %>
              <%= render 'remarks/comment', remark: %>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>
