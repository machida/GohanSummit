<%= turbo_frame_tag remark do %>
  <div id="remark_<%= remark.id %>" class="w-full flex justify-between items-center hover:bg-orange-100 rounded-lg">
    <%= link_to edit_meeting_room_remark_path(remark.meeting_room, remark), class: 'w-full z-0' do %>
      <div class="flex justify-start items-center ml-2 my-1 text-wrap">
        <%= render 'remarks/user_icon', remark: %>
        <%= remark.content %>
      </div>
      <div class="text-center flex-shrink-0">
        <%= link_to '登録', new_meal_plan_meal_path(remark.meeting_room.meal_plan, remark:), data: { turbo_frame: '_top' },
                                                                                           class: 'rounded-full py-2 px-3 text-white bg-red-400 inline-block z-10 hover:bg-red-600' %>
      </div>
    <% end %>
  </div>
<% end %>
