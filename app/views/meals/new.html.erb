<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">タイミングを登録</h1>

  <%= form_with(model: @meal_plan, url: meal_plan_path(@meal_plan), method: 'patch', class: 'contents') do |form| %>
    <div class="my-5">
      <h2 class="font-bold text-3xl"><%= @meal_plan.meal_date %></h2>
      <%= form.hidden_field :meal_date %>
    </div>
    <%= form.fields_for :meals, @meal do |meal_form| %>
      <div class="border border-stone-300 rounded-md p-2 my-2 text-stone-800">
        <div class="my-5">
          <%= meal_form.hidden_field :id %>
          <%= meal_form.select :timing, %w[breakfast lunch dinner] %>
        </div>

        <p class="my-5">
          <%= meal_form.hidden_field :name, value: meal_form.object.name %>
          <strong class="block font-medium mb-1">Name:</strong>
          <span class="block rounded-md px-3 py-2"><%= meal_form.object.name %></span>
        </p>
      </div>
    <% end %>
    <div class="inline">
      <%= form.submit %>
    </div>
  <% end %>

  <% @meal_plan.meals_sort_by_timing.each do |meal| %>
    <%= render meal %>
  <% end %>

  <%= link_to 'Back to remarks', meeting_room_path(@meal_plan.meeting_room),
              class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>

</div>
