<div class="my-5">
  <div class="flex justify-between">
    <%= render 'layouts/title_meal_date', meal_date: meal_plan.meal_date %>
    <div class="flex items-center inline-block">
      <%= link_to edit_meal_plan_path(meal_plan), class: 'rounded-full p-2 hover:bg-orange-400/70' do %>
        <%= image_tag('pages/pen.svg', alt: '編集リンクのペンマーク', class: 'w-7 h-7 text-center') %>
      <% end %>
    </div>
  </div>
  <% meals_sort_by_timing(meal_plan).each do |meal| %>
    <%= render 'meals/meal', meal: %>
  <% end %>
</div>
